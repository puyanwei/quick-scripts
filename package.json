{
  "name": "quick-scripts",
  "displayName": "quick scripts",
  "description": "A script to create a button which runs a script in the terminal",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.addButton",
    "onCommand:extension.deleteButton",
    "onCommand:extension.viewState",
    "onCommand:extension.resetState"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addButton",
        "title": "Quick Scripts: Add button"
      },
      {
        "command": "extension.deleteButton",
        "title": "Quick Scripts: Delete button"
      },
      {
        "command": "extension.viewState",
        "title": "Quick Scripts: View state"
      },
      {
        "command": "extension.resetState",
        "title": "Quick Scripts: Reset state"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}

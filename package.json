{
  "name": "quick-scripts",
  "displayName": "Quick Scripts - Make Status Bar Buttons to run Scripts",
  "description": "A script to create a status bar button which runs a script in the terminal",
  "publisher": "pysoftwareltd",
  "license": "MIT",
  "repository": "https://github.com/puyanwei/quick-scripts-v2",
  "bugs": {
    "url": "https://github.com/puyanwei/quick-scripts-v2/issues"
  },
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.70.0"
  },
  "icon": "quick-scripts.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.addButton",
    "onCommand:extension.deleteButton"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addButton",
        "title": "Quick Scripts: Add button"
      },
      {
        "command": "extension.deleteButton",
        "title": "Quick Scripts: Delete button"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
